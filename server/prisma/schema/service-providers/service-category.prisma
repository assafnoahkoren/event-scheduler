// Service Category - Types of services providers can offer

model ServiceCategory {
  id          String   @id @default(uuid())

  // Organization this category belongs to
  organizationId String       @map("organization_id")
  organization   Organization @relation(fields: [organizationId], references: [id], onDelete: Cascade)

  // Category details
  name        String   // e.g., "Photography", "Catering", "Sound & Lighting"
  description String?

  // Soft delete
  deletedAt   DateTime? @map("deleted_at")
  isDeleted   Boolean   @default(false) @map("is_deleted")

  // Timestamps
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  // Relations
  services    ServiceProviderService[]
  providers   ServiceProvider[]

  @@unique([organizationId, name]) // Name must be unique within organization
  @@index([isDeleted])
  @@index([organizationId])
  @@index([organizationId, isDeleted])
  @@map("service_categories")
}