{
  "name": "server",
  "version": "1.0.0",
  "private": true,
  "description": "Event scheduler server",
  "main": "index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "dev:prod": "tsx watch --env-file=.env.prod src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "postinstall": "prisma generate",
    "db": "tsx src/cli/db-cli.ts",
    "studio:prod": "dotenv -e .env.prod -- prisma studio",
    "tsc": "tsc --noEmit",
    "vercel-build": "prisma generate && npm run build"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.895.0",
    "@aws-sdk/s3-request-presigner": "^3.895.0",
    "@prisma/client": "6.16.2",
    "@trpc/server": "^11.5.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.5.2",
    "@types/uuid": "^10.0.0",
    "bcryptjs": "^3.0.2",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "openai": "^6.2.0",
    "prisma": "6.16.2",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2",
    "uuid": "^13.0.0",
    "zod": "^4.1.9"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.9",
    "chalk": "^5.6.2",
    "dotenv-cli": "^11.0.0",
    "inquirer": "^12.9.6",
    "ora": "^9.0.0"
  }
}
