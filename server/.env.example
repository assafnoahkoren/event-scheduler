# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/database_name?schema=public"

# Server Configuration
PORT=3000
NODE_ENV=development

# Security
JWT_SECRET=your-secret-key-here

# Optional: Enable Prisma query logging
# PRISMA_LOG_LEVEL=query

# Object Storage Configuration (S3-compatible)
# For local development (MinIO)
S3_ENDPOINT=http://localhost:9000
S3_BUCKET=event-scheduler-uploads
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_FORCE_PATH_STYLE=true

# For production (example with Backblaze B2)
# S3_ENDPOINT=https://s3.us-west-004.backblazeb2.com
# S3_BUCKET=your-bucket-name
# S3_REGION=us-west-004
# S3_ACCESS_KEY_ID=your-backblaze-key-id
# S3_SECRET_ACCESS_KEY=your-backblaze-secret-key
# S3_FORCE_PATH_STYLE=true